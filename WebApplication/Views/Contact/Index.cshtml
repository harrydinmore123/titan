@model ContactFormModel
@{
    ViewData["Title"] = "Contact Page";
}

<form action='@Url.Action("Contact","Home")' method='post'>
    <div class="form-group">
        <label asp-for="@Model.Name">Your Name</label>
        <input type="text" asp-for="@Model.Name" name='name' class="form-control" placeholder="Enter your name">
        <span class="text-danger" asp-validation-for="@Model.Name"></span>
    </div>
    <div class="form-group">
        <label asp-for="@Model.Email">Email</label>
        <input type="text" asp-for="@Model.Email"  class="form-control" placeholder="Enter your Email">
        <span class="text-danger" asp-validation-for="@Model.Email"></span>
    </div>
    <div class="form-group">
        <label asp-for="@Model.Subject">Subject</label>
        <input type="text" asp-for="@Model.Subject" class="form-control" placeholder="Enter your subject">
        <span class="text-danger" asp-validation-for="@Model.Subject" ></span>
    </div>
    <div class="form-group">
        <label asp-for="@Model.Query">Query</label>
        <input type="text" asp-for="@Model.Query" name='message' class="form-control" placeholder="Enter your query">
        <span class="text-danger" asp-validation-for="@Model.Query"></span>
    </div>
    
    <button type="submit" value='Send Message' class="btn btn-primary">Send Mail</button>
</form>

