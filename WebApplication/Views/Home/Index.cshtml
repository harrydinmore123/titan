<div class="text-center">
    <h1 class="display-4 mb-3">Welcome to Testco</h1>
</div>


<div>
    <div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
        <div class="carousel-inner">
            <div class="carousel-item active">
                <a href="Products"><img class="d-block w-100" src="~/images/PingPongBalls.jpg" alt="First slide"></a>
                <div class="card-body">
                    <h2 class="product-title">Ping Pong Balls</h2>
                    <p><span class="badge badge-info category">Sports</span></p>
                    <p class="card-text">
                        <span class="price">£2.99</span>
                    </p>
                </div>
            </div>
            <div class="carousel-item">
                <a href="Products"><img class="d-block w-100" src="~/images/Banjo.jpg" alt="Second slide"></a>
                <div class="card-body">
                    <h2 class="product-title">Banjo</h2>
                    <p><span class="badge badge-info category">Other</span></p>
                    <p class="card-text">
                        <span class="price">£49.99</span>
                    </p>
                </div>
            </div>
            <div class="carousel-item">
                    <a href="Products"><img class="d-block w-100" src="~/images/Drone.jpg" alt="Third slide"></a>
                    <div class="card-body">
                        <h2 class="product-title">Drone</h2>
                        <p><span class="badge badge-info category">Other</span></p>
                        <p class="card-text">
                            <span class="price">£99.99</span>
                        </p>
                    </div>
                </div>
        </div>
            <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="sr-only">Previous</span>
            </a>
            <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="sr-only">Next</span>
            </a>
    </div>
</div>


